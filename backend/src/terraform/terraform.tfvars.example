# Terraform Variables Template
# Copy this file to terraform.tfvars and fill in your actual values

# GCP Configuration
project_id          = "your-gcp-project-id"
region              = "us-central1"
service_name        = "wallabag"

# Supabase Configuration
supabase_project_ref      = "your-supabase-project-ref"
supabase_host             = "aws-0-ap-northeast-1.pooler.supabase.com"
supabase_port             = 5432
supabase_db_password      = "your-database-password-here"
supabase_access_token     = ""  # Will be populated during deployment if needed

# Database Connection Information
env_vars = {
  "SYMFONY__ENV__DATABASE_DRIVER"         = "pdo_pgsql"
  "SYMFONY__ENV__DATABASE_HOST"           = "aws-0-ap-northeast-1.pooler.supabase.com"
  "SYMFONY__ENV__DATABASE_PORT"           = "5432"
  "SYMFONY__ENV__DATABASE_NAME"           = "wallabag_db"
  "SYMFONY__ENV__DATABASE_USER"           = "postgres.your-supabase-project-ref"
  "SYMFONY__ENV__DATABASE_CHARSET"        = "utf8"
  "SYMFONY__ENV__DATABASE_DRIVER_OPTIONS" = "{\\\"sslmode\\\":\\\"require\\\"}"
  "POSTGRES_HOST"                         = "aws-0-ap-northeast-1.pooler.supabase.com"
  "POSTGRES_PORT"                         = "5432"
  "POSTGRES_USER"                         = "postgres.your-supabase-project-ref"
  "PGDATABASE"                            = "postgres"
  "POPULATE_DATABASE"                     = "False"
}

# Secret environment variables
secret_env_vars = {
  "POSTGRES_PASSWORD" = {
    secret_name = "wallabag-db-password"
    secret_key  = "latest"
  },
  "SYMFONY__ENV__DATABASE_PASSWORD" = {
    secret_name = "wallabag-db-password"
    secret_key  = "latest"
  }
}

# Container Image Configuration
container_image     = "us-central1-docker.pkg.dev/your-gcp-project-id/wallabag/wallabag:latest"

# Application Configuration
log_level           = "info"
enable_monitoring   = true
enable_custom_domain = false
