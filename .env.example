# Wallabag Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==================== Google Cloud Configuration ====================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# ==================== Supabase PostgreSQL Configuration ====================
SUPABASE_PROJECT_REF=your-supabase-project-ref
SUPABASE_HOST=aws-0-ap-northeast-1.pooler.supabase.com
SUPABASE_PORT=5432
SUPABASE_DB_PASSWORD=your-database-password-here

# The full PostgreSQL user includes the project reference
# Format: postgres.{SUPABASE_PROJECT_REF}
SUPABASE_DB_USER=postgres.your-supabase-project-ref

# Database name for Wallabag application
SUPABASE_DB_NAME=wallabag_db

# ==================== Cloud Run Configuration ====================
# Your Cloud Run service URL (after first deployment)
CLOUD_RUN_URL=https://your-service-name-XXXXXXXXXX-uc.a.run.app

# ==================== Docker Artifact Registry ====================
# Google Cloud Artifact Registry image path
CONTAINER_IMAGE=us-central1-docker.pkg.dev/your-gcp-project-id/wallabag/wallabag:latest

# ==================== Wallabag Security ====================
# Generate a random string for this value (minimum 32 characters)
WALLABAG_SECRET=change_this_to_a_random_string_of_at_least_32_characters

# ==================== Local Development ====================
# Port for local development (default: 8080)
LOCAL_PORT=8080
LOCAL_DOMAIN=http://localhost:8080

# ==================== Optional Settings ====================
# Wallabag log level (debug, info, warning, error)
LOG_LEVEL=info

# Enable custom domain (true/false)
ENABLE_CUSTOM_DOMAIN=false
CUSTOM_DOMAIN_NAME=
